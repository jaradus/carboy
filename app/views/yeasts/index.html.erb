<div class="row">
    <h1>Yeast</h1><%= button_to "Add Yeast", new_yeast_path, :method => :get, class: "button tiny success" %>

    <table>
      <thead>
        <tr>
          <% @items_header.each do |header| %>
            <th><%= header.humanize %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
            <tr>
                <td><a href="<%= yeast_path(item) %>"><%= item.name %></a></td>
                <td><%= item.yeast_type %></td>
                <td><%= item.supplier %></td>
                <td><%= item.yeast_format %></td>
                <td><%= item.category %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
</div>